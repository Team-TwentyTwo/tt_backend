generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Groups {
  id           String   @id @default(uuid())
  name         String
  imageURL     String
  isPublic     Boolean
  likeCount    Int      @default(0)
  postCount    Int      @default(0)
  badges       String[]
  badgesCount  Int      @default(0)
  createdAt    DateTime @default(now())
  introduction String
  password     String
  Posts        Posts[]
}

model Posts {
  id           String     @id @default(uuid())
  nickname     String
  title        String
  content      String
  postPassword String
  imageURL     String
  location     String
  moment       String
  tags         String[]
  isPublic     Boolean
  likeCount    Int        @default(0)
  commentCount Int        @default(0)
  createdAt    DateTime   @default(now())
  group        Groups     @relation(fields: [groupId], references: [id]) // 게시글 - 사용자 다대일 관계
  groupId      String
  Comments     Comments[]
}

model Comments {
  id        String   @id @default(uuid())
  nickname  String
  content   String
  createdAt DateTime @default(now())
  post      Posts    @relation(fields: [postId], references: [id]) // 댓글 - 게시글 다대일 관계
  postId    String
}
